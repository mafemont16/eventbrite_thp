<!-- card deck 2--->
<body>
  <div class="row">
        	<% Event.all.each do |event| %>
            <div class="col-4 mb-5">
            <div class="card">
            <img src="https://blogmedia.evbstatic.com/wp-content/uploads/wpmulti/sites/3/2020/04/Step-by-step-guide-to-moving-your-event-online.png" class="card-img-top img-responsive">
            <div class="card-body text-center">
							<h4 class="card-title"> <%= event.title %></h4>
                <hr>
							<span class="card-text"> <%= event.description %></span>
              <br>
                <a href="<%= event_path(event.id) %>" class="btn btn-secondary btn-block btn-sm my-3 btn-2">See the event</a>
					  </div>
			   	</div>
        </div>
        <%end%>
		  </div>
</body>
